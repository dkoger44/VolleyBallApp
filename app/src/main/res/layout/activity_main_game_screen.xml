<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.example.android.volleyballapp.MainGameScreenActivity"
    android:background="@android:color/darker_gray">

    <!--Top bar-->
    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/holo_orange_dark"
        android:weightSum="3"
        >
        <!--left segment with Libero information -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <!--Libero CardView-->
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="34dp"
                android:layout_marginLeft="14dp"
                card_view:cardElevation="4dp"
                card_view:cardCornerRadius="8dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <!--title-->
                    <TextView
                        android:id="@+id/libTitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:textAlignment="center"
                        android:text="Libero"
                        android:textSize="18sp" />
                    <!--name-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/libName"
                        android:text="Name"
                        android:layout_below="@id/libTitleText"
                        android:layout_centerHorizontal="true"/>
                    <!--number-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/libNumber"
                        android:text="Number"
                        android:layout_below="@id/libName"
                        android:layout_centerHorizontal="true"/>
                    <!--swap button-->
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/libBtn"
                        android:text="lib BTN"
                        android:layout_below="@id/libName"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true" />
                    <!--picture-->
                    <ImageView
                        android:id="@+id/libPic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        card_view:srcCompat="@mipmap/ic_launcher" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
        <!--Center segment with team score information-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_green_light">
            <!--team titles-->
            <LinearLayout
                android:id="@+id/teamTitles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Team"
                    android:textColor="@android:color/white"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="14dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Opponent"
                    android:textColor="@android:color/white"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="14dp"/>
            </LinearLayout>
            <!--second row below titles-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:weightSum="3"
                android:layout_below="@+id/teamTitles">
                <!-- left team score-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/blueScoreSheets"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/leftTeamScoreTensDigit"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:textColor="@android:color/white"
                        android:layout_margin="4dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/leftTeamScoreOnesDigit"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:textColor="@android:color/white"
                        android:layout_margin="4dp"
                        android:layout_weight="1"/>
                </LinearLayout>
                <!--center sector where arrows and time outs are -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="6dp"
                    android:orientation="vertical">
                    <!-- serve arrows -->
                    <LinearLayout
                        android:id="@+id/serveIndicator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/serveArrowLeft"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@mipmap/ic_arrow_back_white_24dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Serve"
                            android:textSize="14dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:textColor="@android:color/white"/>

                        <ImageView
                            android:id="@+id/serveArrowRight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@mipmap/ic_arrow_forward_white_24dp" />
                    </LinearLayout>
                    <!--Games won-->
                    <LinearLayout
                        android:id="@+id/gamesWonIndicator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="12dp">
                        <TextView
                            android:id="@+id/leftTeamGamesWon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@android:color/white"
                            android:padding="2dp"
                            android:background="@color/blueScoreSheets"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Games"
                            android:textSize="14dp"
                            android:layout_marginRight="4dp"
                            android:layout_marginLeft="4dp"
                            android:textColor="@android:color/white"/>
                        <TextView
                            android:id="@+id/rightTeamGamesWon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:padding="2dp"
                            android:textColor="@android:color/white"
                            android:background="@color/redScoreSheets"/>
                    </LinearLayout>
                    <!--Time outs remaining -->
                    <LinearLayout
                        android:id="@+id/timeOutsIndicator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="12dp">
                        <TextView
                            android:id="@+id/leftTeamTimeOuts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@android:color/white"
                            android:padding="2dp"
                            android:background="@color/blueScoreSheets"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TO"
                            android:textSize="14dp"
                            android:layout_marginRight="4dp"
                            android:layout_marginLeft="15dp"
                            android:textColor="@android:color/white"/>
                        <TextView
                            android:id="@+id/rightTeamTimeOuts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@android:color/white"
                            android:background="@color/redScoreSheets"
                            android:padding="2dp"
                            android:layout_marginLeft="16dp"/>
                    </LinearLayout>
                </LinearLayout>
                <!--right team score -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_below="@+id/teamTitles">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/redScoreSheets"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/rightTeamScoreTensDigit"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="0"
                            android:textColor="@android:color/white"
                            android:layout_margin="4dp"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/rightTeamScoreOnesDigit"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="0"
                            android:textColor="@android:color/white"
                            android:layout_margin="4dp"
                            android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <!--right segment with rotation and subs remaining as well as menu button -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_light">
            <!--rotation information -->
            <LinearLayout
                android:id="@+id/rotationLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="8dp">
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="24dp"
                        android:textAlignment="center"
                        android:padding="2dp"/>
                </android.support.v7.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rotation"
                    android:textColor="@android:color/white"
                    android:textSize="24dp"/>
            </LinearLayout>
            <!--Subs remaining information -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/subLayout"
                android:orientation="horizontal"
                android:layout_margin="8dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true">
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="24dp"
                        android:textAlignment="center"
                        android:padding="2dp"/>
                </android.support.v7.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subs Remaining"
                    android:textColor="@android:color/white"
                    android:textSize="24dp"/>
            </LinearLayout>
            <!--undo button -->
            <Button
                android:id="@+id/gameUndoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UNDO"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="16dp"/>
        </RelativeLayout>

    </LinearLayout>

    <!--court player cards -->
    <GridLayout
        android:columnCount="3"
        android:rowCount="1"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
       >

        <!-- Row 1 -->
        <!-- Column 1 -->
        <!--player 1-->
        <!-- todo need to change the cardview width and height for samsung tablet -->
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="8dp"
            card_view:cardUseCompatPadding="true"
            android:id="@+id/pos1Card">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!-- player 1 info -->
                <LinearLayout
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:id="@+id/pos1PlayerInfo"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/pos1Attack"
                    android:padding="8dp"
                    android:background="@android:color/darker_gray">
                    <!--picture-->
                    <ImageView
                        android:id="@+id/pos1PlayerPic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        card_view:srcCompat="@mipmap/ic_launcher" />
                    <!--name-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:id="@+id/pos1PlayerName"
                        android:text="Player Name"
                        android:textSize="14sp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#"
                            android:textSize="12dp"/>
                        <TextView
                            android:id="@+id/pos1PlayerNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00"
                            android:textSize="12dp"/>

                    </LinearLayout>
                    <Button
                        android:id="@+id/pos1SubButton"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Sub"
                        android:textSize="12dp"/>
                </LinearLayout>
                <!--serving-->
                <LinearLayout
                    android:id="@+id/pos1ServingSection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/pos1PlayerInfo"
                    android:orientation="vertical"
                    android:background="@android:color/holo_purple">
                    <TextView
                        android:id="@+id/servingTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Serving"
                        android:textSize="12dp"/>
                    <!--serve buttons-->
                    <LinearLayout
                        android:id="@+id/serveButtons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="7dp"
                        android:orientation="horizontal"
                        android:weightSum="3">
                        <Button
                            android:id="@+id/pos1AceButton"
                            android:minHeight="0dp"
                            android:minWidth="0dp"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="ACE"
                            android:textSize="12dp"/>
                        <Button
                            android:id="@+id/pos1MissButton"
                            android:minHeight="0dp"
                            android:minWidth="0dp"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="MISS"
                            android:textSize="12dp"/>
                        <Button
                            android:id="@+id/pos1SerRecErrButton"
                            android:minHeight="0dp"
                            android:minWidth="0dp"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="REC ERR"
                            android:textSize="12dp"/>
                    </LinearLayout>
                </LinearLayout>
                <!--Attack-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pos1Attack"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/pos1ServingSection"
                    android:layout_toRightOf="@+id/pos1PlayerInfo"
                    android:background="@android:color/holo_orange_dark">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="Attack" />
                    <!--Attack Buttons-->
                    <LinearLayout
                        android:id="@+id/pos1AttackButtons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        android:padding="7dp"
                        android:weightSum="3"
                        >
                        <Button
                            android:id="@+id/pos1KillButton"
                            android:minHeight="0dp"
                            android:minWidth="0dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="KILL"
                            android:textSize="12dp"/>
                        <Button
                            android:id="@+id/pos1AttackErrButton"
                            android:minHeight="0dp"
                            android:minWidth="0dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ERR"
                            android:textSize="12dp"/>
                        <Button
                            android:id="@+id/pos1AttackHNPButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:minHeight="0dp"
                            android:minWidth="0dp"
                            android:layout_weight="1"
                            android:text="HNP"
                            android:textSize="12dp"/>
                    </LinearLayout>
                </LinearLayout>
                <!-- Setting -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pos1SettingSection"
                    android:layout_below="@+id/pos1PlayerInfo"
                    android:background="@android:color/holo_blue_bright"
                    android:orientation="vertical"
                    android:layout_alignParentLeft="true"
                    android:layout_alignRight="@id/pos1PlayerInfo"
                    android:layout_alignParentBottom="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Setting"
                        android:textSize="12dp"/>
                    <!--Setting Buttons-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="2"
                        >
                        <Button
                            android:id="@+id/pos1AssistErrorButton"
                            android:minHeight="0dp"
                            android:minWidth="0dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:text="Assist"
                            android:textSize="8dp"/>
                        <Button
                            android:id="@+id/pos1BallErrButton"
                            android:minHeight="0dp"
                            android:minWidth="0dp"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="0dp"
                            android:text="Ball ERROR"
                            android:textSize="8dp"/>
                    </LinearLayout>
                </LinearLayout>
                <!--Passing-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/pos1PassingSection"
                    android:background="@android:color/holo_green_light"
                    android:layout_below="@+id/pos1Attack"
                    android:layout_toRightOf="@+id/pos1SettingSection"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Passing"
                        android:textSize="12dp" />
                    <!--Passing Buttons-->
                    <!--row1-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:orientation="horizontal">
                        <Button
                            android:minHeight="0dp"
                            android:minWidth="0dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/pos1RecErrButton"
                            android:text="Rec Err"
                            android:textSize="12dp"/>
                        <Button
                            android:minHeight="0dp"
                            android:minWidth="0dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/pos1DigButton"
                            android:textSize="12dp"
                            android:text="DIG"/>
                    </LinearLayout>
                    <!--Pssing Buttons-->
                    <!--row 2-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:orientation="horizontal">
                        <Button
                            android:minHeight="0dp"
                            android:minWidth="0dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/pos1Pass1Button"
                            android:text="1"
                            android:textSize="12dp"/>
                        <Button
                            android:minHeight="0dp"
                            android:minWidth="0dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/pos1Pass2Button"
                            android:text="2"
                            android:textSize="12dp"/>
                        <Button
                            android:minHeight="0dp"
                            android:minWidth="0dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/pos3Pass1Button"
                            android:text="3"
                            android:textSize="12dp"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <!-- Row 1 -->
        <!-- Column 2 -->
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="8dp"
            card_view:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:id="@+id/r1c2"
                    android:text="Row 1 Column 2"
                    android:textSize="18sp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <!-- Row 1 -->
        <!-- Column 3 -->
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="8dp"
            card_view:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
